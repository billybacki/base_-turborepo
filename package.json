    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4",
    "vitest": "^2.1.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "pnpm run commitmsg"
    }
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
